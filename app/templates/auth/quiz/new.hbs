<h2>{{t 'quiz.add'}}</h2>
<hr>
<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2">
      {{t 'quiz.language'}} #1
    </label>
    <div class="col-sm-10">
      {{view "select" class="form-control" content=globals.countryCodes value=language1}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">
      {{t 'quiz.language'}} #2
    </label>
    <div class="col-sm-10">
      {{view "select" class="form-control" content=globals.countryCodes value=language2}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">
      {{t 'quiz.maxWords'}}
    </label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=limit}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">
      {{t 'quiz.visibleLanguage'}}
    </label>
    <div class="col-sm-10">
      {{view "select" class="form-control" content=globals.languageChoices value=visibleLanguage}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">{{t 'words.category'}}</label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=category}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" {{action 'saveQuiz'}}>{{t 'quiz.save'}}</button>
    </div>
  </div>
</form>
{{show-message message=error type=danger}}
