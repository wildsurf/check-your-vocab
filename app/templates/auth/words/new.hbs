<h2>{{t 'words.add'}}</h2>
<hr>
<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2">
      {{view "select" class="form-control" name="language1" content=globals.countryCodes value=language1}}
    </label>
    <div class="col-sm-10">
      {{input class="form-control" name="translation1" type="text" value=translation1}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">
      {{view "select" class="form-control" name="language2" content=globals.countryCodes value=language2}}
    </label>
    <div class="col-sm-10">
      {{input class="form-control" name="translation2" type="text" value=translation2}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">{{t 'words.category'}}</label>
    <div class="col-sm-10">
      {{input class="form-control" name="category" type="text" value=category}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" name="save-word" {{action 'saveWord'}}>{{t 'words.save'}}</button>
    </div>
  </div>
</form>
{{show-message message=error type=danger}}

