<h2>{{t 'words.add'}}</h2>
<hr>
<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2">
      {{view "select" class="form-control" content=globals.countryCodes value=language1}}
    </label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=translation1}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2">
      {{view "select" class="form-control" content=globals.countryCodes value=language2}}
    </label>
    <div class="col-sm-10">
      {{input class="form-control" type="text" value=translation2}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" {{action 'saveWord'}}>{{t 'words.save'}}</button>
    </div>
  </div>
</form>
{{#if error}}
  <p class="message bg-danger">{{error}} <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></p>
{{/if}}
