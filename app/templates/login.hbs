<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <!-- LOGIN FORM -->
    <form {{action 'authenticate' on='submit'}}>
        <div class="form-group">
            <label>Email</label>
            {{input classNames="form-control" value=identification placeholder='Enter Login'}}
        </div>
        <div class="form-group">
            <label>Password</label>
            {{input classNames="form-control" value=password placeholder='Enter Password' type='password'}}
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Login</button>
    </form>

    <hr>

    <p>Or Login or Register with:</p>

    <a href="{{unbound controller.facebookLoginUrl}}" class="btn btn-primary">Facebook</a>

    <a {{action 'authenticate' 'twitter'}} class="btn btn-info">Twitter</a>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>

</div>
